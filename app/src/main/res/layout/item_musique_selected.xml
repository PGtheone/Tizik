<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imgmusique"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitCenter"
        android:src="@color/placeholder_bg"
        app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtnommusique"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:text="Monte Desann"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@+id/imgmore"
        app:layout_constraintStart_toEndOf="@+id/imgmusique"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtnomartiste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtnommusique"
        android:layout_marginStart="8dp"
        android:text="Baky Popile"
        app:layout_constraintStart_toEndOf="@+id/imgmusique"
        app:layout_constraintTop_toBottomOf="@+id/txtnommusique" />

    <TextView
        android:id="@+id/txtalbum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtnommusique"
        android:layout_marginStart="8dp"
        android:text="Echec Et Math"
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@id/txtduree"
        app:layout_constraintStart_toEndOf="@+id/imgmusique"
        app:layout_constraintTop_toBottomOf="@+id/txtnomartiste" />


    <TextView
        android:id="@+id/txtduree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtnommusique"
        android:layout_marginEnd="8dp"
        android:text="4:05s"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txtalbum"
        app:layout_constraintTop_toBottomOf="@+id/txtnomartiste"
        android:textAlignment="textEnd"
        />

