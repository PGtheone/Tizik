<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imggalerie"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/txttitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Titre"
                android:singleLine="true"
                app:layout_constraintTop_toBottomOf="@id/imggalerie"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="150dp" />


            <TextView
                android:id="@+id/txtartiste"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Artiste"
                android:singleLine="true"
                app:layout_constraintTop_toBottomOf="@id/txttitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txtduree"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textSize="14sp"
                tools:layout_editor_absoluteY="150dp" />

            <TextView
                android:id="@+id/txtduree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="4:05s"
                app:layout_constraintTop_toBottomOf="@id/txttitle"
                app:layout_constraintStart_toEndOf="@id/txtartiste"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textSize="14sp"
                android:textAlignment="textEnd"
                android:textColor="#C01040"
                tools:layout_editor_absoluteY="150dp" />
        </android.support.constraint.ConstraintLayout>


        <ImageView
            android:id="@+id/placeholder_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:visibility="visible"
            android:src="@color/semi_transparent_pink"
            />
    </android.support.v7.widget.CardView>

</FrameLayout>